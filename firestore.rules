rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ðŸ”¹ OTP CODES COLLECTION
    match /otp_codes/{email} {
      allow create, update, delete: if true;
      allow read: if false;
    }

    // ðŸ”¹ EMPLOYEES COLLECTION
    match /employees/{employeeId} {
      allow get, list: if request.auth != null;

      allow update: if request.auth != null
                    && request.auth.uid == resource.data.firebaseUid
                    && !(request.resource.data.keys().hasAny(['email', 'kgid']));

      allow create, update, delete: if request.auth != null
                                    && request.auth.token.email in [
                                      "ravipolice@gmail.com",
                                      "ravipolicecbp@gmail.com"
                                    ];
    }

    // ðŸ”¹ ADMINS COLLECTION
    match /admins/{adminId} {
      allow get, list: if request.auth != null;
      allow write: if request.auth != null
                   && request.auth.token.email in [
                     "ravipolice@gmail.com",
                     "ravipolicecbp@gmail.com"
                   ];
    }

    // ðŸ”¹ META COLLECTION
    match /meta/{document=**} {
      allow get: if request.auth != null;
      allow write: if request.auth != null
                   && request.auth.token.email in [
                     "admin@ksp.gov.in",
                     "superadmin@gmail.com"
                   ];
    }
  }
}
