rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ðŸ”¹ OTP CODES COLLECTION
    match /otp_codes/{email} {
      allow create, update, delete: if true;
      allow read: if false;
    }

    // ðŸ”¹ OFFICERS COLLECTION (Read-only contacts, no auth required)
    match /officers/{officerId} {
      // Allow anyone to read officers (read-only contacts, no login needed)
      allow read: if true;
      
      // Only admins can write (for sync from Google Sheets via Apps Script)
      allow create, update, delete: if isAdmin();
      
      // Allow Apps Script (unauthenticated) to write officers during sync
      allow create, update: if request.auth == null
                            && request.resource.data.keys().hasAll(['agid', 'name']);
    }

    // ðŸ”¹ EMPLOYEES COLLECTION
    match /employees/{employeeId} {

      // Require authentication for reads (directory not public)
      allow read: if request.auth != null;

      // ðŸ”¹ Employee can update their own record (except protected fields)
      allow update: if request.auth != null
                    && request.auth.uid == resource.data.firebaseUid
                    && !(request.resource.data.keys().hasAny(['email', 'kgid']))
                    && !isAdmin();

      // ðŸ”¹ Apps Script (unauthenticated) can update ONLY photoUrl
      allow update: if request.auth == null
                    && request.resource.data.keys().hasOnly(['photoUrl']);

      // Admin full access
      allow create, update, delete: if isAdmin();
    }

    // ðŸ”¹ ADMINS COLLECTION
    match /admins/{adminId} {
      allow get, list: if request.auth != null;
      allow write: if isAdmin();
    }

    // ðŸ”¹ META COLLECTION
    match /meta/{document=**} {
      allow get: if request.auth != null;
      allow write: if isAdmin();
    }

    // ðŸ”¹ PENDING REGISTRATIONS
    match /pending_registrations/{docId} {
      allow create: if request.resource.data.keys().hasAll(
        ['kgid','email','name','mobile1','rank','district','station','pin']
      );
      allow read, update, delete: if isAdmin();
    }

    // ðŸ”¹ ADMIN NOTIFICATIONS
    match /admin_notifications/{docId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // ðŸ”¹ PUSH NOTIFICATION QUEUE
    match /notifications_queue/{docId} {
      allow create: if request.auth != null;
      allow read, update, delete: if isAdmin();
    }

    // ðŸ”¹ USEFUL LINKS COLLECTION
    match /useful_links/{linkId} {
      allow read: if true;

      // App writes: only authenticated admins
      allow create, update, delete: if isAdmin();

      // Apps Script sync (unauthenticated)
      allow create, update: if request.auth == null
                            && request.resource.data.keys().hasAll([
                              'name',
                              'playStoreUrl',
                              'apkUrl',
                              'iconUrl'
                            ]);
      allow delete: if request.auth == null;
    }

    // ðŸ”¹ GALLERY COLLECTION (Public Read, Admin/Apps Script Write)
    match /gallery/{imageId} {
      allow read: if true; // Public read access for all gallery images

      // Admin can create, update, delete gallery images
      allow create, update, delete: if isAdmin();

      // Apps Script can create/update gallery images (unauthenticated)
      allow create, update: if request.auth == null
                            && request.resource.data.keys().hasAll(['imageUrl']);
    }

    // ------------ ADMIN CHECK ------------
    function isAdmin() {
      return request.auth != null
          && request.auth.token.email in [
              "ravipolice@gmail.com",
              "noreply.policemobiledirectory@gmail.com"
          ];
    }
  }
}
